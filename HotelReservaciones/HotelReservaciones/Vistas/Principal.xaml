<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="HotelReservaciones.Vistas.Principal"
    BackgroundColor="#000000">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center">
            <Label Text="Hotel Booking" TextColor="White" FontSize="45" FontAttributes="Bold" Padding="15"  VerticalTextAlignment="Center"/>
            <Label Text="Reserva hoteles y alojamientos online en todo el mundo, elige entre nuestras opciones."
                   TextColor="White" FontSize="22"  Padding="15" VerticalTextAlignment="Center"/>
           
            <Button Text="Comenzar" BackgroundColor="#159EEE" TextColor="White" FontAttributes="Bold" CornerRadius="10" Padding="10" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>

